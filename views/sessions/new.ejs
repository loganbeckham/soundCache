    <body>
        <%- include ('../../partials/nav.ejs') %>
        <div class="container text-center">
            <h1 class="title pt-5">Sign In</h1>
            <div class="pt-3">
                <form action="/sessions" method="POST">
                    <input class="mb-2" type="text" name="username" placeholder="Username" /><br/>
